{
    "dataBinding": {
        "dataRoles": [
            {
                "name": "image",
                "displayNameKey": "图片",
                "kind": "grouping"
            },
            {
                "name": "imageDescription",
                "displayNameKey": "图片说明",
                "kind": "grouping"
            }
        ],
        "dataViewMappings": [
            {
                "plain": {
                    "required": [{
                        "image": {
                            "min": 1
                        },
                        "imageDescription": {
                            "min": 1
                        }
                    },{
                        "image": {
                            "min": 1
                        },
                        "imageDescription": {
                            "max": 0
                        }
                    }]
                }
            }
        ],
        "conditions": [
            {
                "image": {
                    "max": 1
                },
                "imageDescription": {
                    "max": 1
                }
            }
        ]
    },
    "options": {
        "visual": [
            {
                "displayName": "图表样式",
                "properties": [
                    {
                        "name": "useButton",
                        "type": "Boolean",
                        "displayName": "是否启用翻页按钮",
                        "defaultValue": false
                    },
                    {
                        "name": "autoPlay",
                        "type": "Boolean",
                        "displayName": "是否开启自动轮播",
                        "defaultValue": true
                    },
                    {
                        "displayNameKey": "自动轮播间隔(毫秒)",
                        "name": "delay",
                        "type": "Integer",
                        "min": 100,
                        "defaultValue": 2000
                    },
                    {
                        "name": "effect",
                        "type": "Enum",
                        "displayName": "切换动效",
                        "items": [
                            {
                                "value": "fade",
                                "displayNameKey": "渐变"
                            },
                            {
                                "value": "coverflow",
                                "displayNameKey": "3D滚动"
                            },
                            {
                                "value": "cube",
                                "displayNameKey": "3D方块"
                            },
                            {
                                "value": "flip",
                                "displayNameKey": "3D反转"
                            }
                        ],
                        "defaultValue": "cube"
                    },
                    {
                        "displayNameKey": "切换动效速度",
                        "name": "speed",
                        "type": "Integer",
                        "min": 100,
                        "defaultValue": 2000
                    },
                    {
                        "name": "imageDescSetting",
                        "type": "TextStyle",
                        "displayName": "字体设置",
                        "inheritFrom": "dashboard.textStyle",
                        "defaultValue": {
                            "fontSize": "14px"
                        }
                    }
                ]
            },
            {
                "type": "title"
            },
            {
                "type": "interaction",
                "properties": [{
                    "name": "clickLeftMouse",
                    "type": "Enum",
                    "displayName": "鼠标左键选项",
                    "items": [
                        {
                            "value": "none",
                            "displayNameKey": "无"
                        },
                        {
                            "value": "showToolTip",
                            "displayNameKey": "显示工具提示"
                        },
                        {
                            "value": "Keep",
                            "displayNameKey": "保留"
                        },
                        {
                            "value": "Exclude",
                            "displayNameKey": "排除"
                        },
                        {
                            "value": "Drill",
                            "displayNameKey": "钻取"
                        },
                        {
                            "value": "Jump",
                            "displayNameKey": "跳转"
                        }
                    ],
                    "defaultValue": "none"
                }]
            },
            {
                "type": "appearance"
            }
        ]
    },
    "actions": [
        {
            "type": "focus"
        },
        {
            "type": "annotation"
        }
    ],
    "analysis": []
}
